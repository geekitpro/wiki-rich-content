<extension>
    <modules>
    
        <!--
            Customization module for adding i18n labels and importing client-side dependencies for
            the wiki page parsers
        -->
        <module>
            <id>Wiki Rich Content</id>
            <customizations>
                <!-- Import wiki-page.ftl template extension -->
                <customization>
                    <targetPackageRoot>org.alfresco</targetPackageRoot>
                    <sourcePackageRoot>org.sharextras.customization.wiki-rich-content</sourcePackageRoot>
                </customization>
                <customization>
                    <targetPackageRoot>org.alfresco.components.wiki</targetPackageRoot>
                    <dependencies>
                        <!-- Additional CSS -->
                        <css>/res/extras/components/wiki/wiki-rich-content.css</css>
                        <!-- Custom page parsers -->
                        <js>/res/extras/components/wiki/page-parsers.js</js>
                    </dependencies>
                </customization>
                <!-- Not actually present -->
                <!--
                <customization>
                    <targetPackageRoot>org.alfresco.components.wiki</targetPackageRoot>
                    <sourcePackageRoot>org.sharextras.customization.wiki</sourcePackageRoot> 
                </customization>
                -->
            </customizations>
            <auto-deploy>true</auto-deploy>
        </module>
        
        <!-- Import individual client-side parsers -->
        
        <!-- TOC -->
        <module>
            <id>Wiki Rich Content TOC</id>
            <customizations>
                <customization>
                    <targetPackageRoot>org.alfresco.components.wiki</targetPackageRoot>
                    <dependencies>
                        <css>/res/extras/components/wiki/toc-parser.css</css>
                        <js>/res/extras/components/wiki/toc-parser.js</js>
                    </dependencies>
                </customization>
            </customizations>
            <auto-deploy>true</auto-deploy>
        </module>
        
        <!-- DataTables -->
        <module>
            <id>Wiki Rich Content Data Tables</id>
            <customizations>
                <customization>
                    <targetPackageRoot>org.alfresco.components.wiki</targetPackageRoot>
                    <dependencies>
                        <css>/res/extras/components/wiki/table-parser.css</css>
                        <js>/res/extras/components/wiki/table-parser.js</js>
                    </dependencies>
                </customization>
            </customizations>
            <auto-deploy>true</auto-deploy>
        </module>
        
        <!-- Prettyprint -->
        <module>
            <id>Wiki Rich Content google-code-prettify Formatting</id>
            <customizations>
                <customization>
                    <targetPackageRoot>org.alfresco.components.wiki</targetPackageRoot>
                    <dependencies>
                        <css>/res/extras/components/wiki/prettyprint-parser.css</css>
                        <js>/res/extras/components/wiki/prettyprint-parser.js</js>
                        <js>/res/extras/modules/prettify/prettify.js</js>
                        <css>/res/extras/modules/prettify/prettify.css</css>
                    </dependencies>
                </customization>
            </customizations>
            <auto-deploy>true</auto-deploy>
        </module>
        
        <!-- Video links -->
        <module>
            <id>Wiki Rich Content Video Embeds</id>
            <customizations>
                <customization>
                    <targetPackageRoot>org.alfresco.components.wiki</targetPackageRoot>
                    <dependencies>
                        <css>/res/extras/components/wiki/video-parser.css</css>
                        <js>/res/extras/components/wiki/video-parser.js</js>
                    </dependencies>
                </customization>
            </customizations>
            <auto-deploy>true</auto-deploy>
        </module>
        
        <!-- Document embeds -->
        <!--
        <module>
            <id>Wiki Rich Content Document Embeds</id>
            <customizations>
                <customization>
                    <targetPackageRoot>org.alfresco.components.wiki</targetPackageRoot>
