<extension>
    <modules>
    
        <!--
            Customization module for adding i18n labels and importing client-side dependencies for
            the wiki page parsers
        -->
        <module>
            <id>Wiki Rich Content</id>
            <customizations>
                <!-- Import wiki-page.ftl template extension -->
                <customization>
                    <targetPackageRoot>org.alfresco</targetPackageRoot>
                    <sourcePackageRoot>org.sharextras.customization.wiki-rich-content</sourcePackageRoot>
                </customization>
            </customizations>
            <auto-deploy>true</auto-deploy>
        </module>
        
        <!-- Import individual client-side parsers -->
        
        <!-- TOC -->
        <module>
            <id>Wiki Rich Content TOC</id>
            <customizations>
                <customization>
                    <targetPackageRoot>org.sharextras.components.wiki</targetPackageRoot>
                    <sourcePackageRoot>org.sharextras.customization.wiki-toc-parser</sourcePackageRoot>
                </customization>
            </customizations>
            <auto-deploy>true</auto-deploy>
        </module>
        
        <!-- DataTables -->
        <module>
            <id>Wiki Rich Content Data Tables</id>
            <customizations>
                <customization>
                    <targetPackageRoot>org.sharextras.components.wiki</targetPackageRoot>
                    <sourcePackageRoot>org.sharextras.customization.wiki-table-parser</sourcePackageRoot>
                </customization>
            </customizations>
            <auto-deploy>true</auto-deploy>
        </module>
        
        <!-- Prettyprint -->
        <module>
            <id>Wiki Rich Content google-code-prettify Formatting</id>
            <customizations>
                <customization>
                    <targetPackageRoot>org.sharextras.components.wiki</targetPackageRoot>
                    <sourcePackageRoot>org.sharextras.customization.wiki-prettyprint-parser</sourcePackageRoot>
                </customization>
            </customizations>
            <auto-deploy>true</auto-deploy>
        </module>
        
        <!-- Video links -->
        <module>
            <id>Wiki Rich Content Video Embeds</id>
            <customizations>
                <customization>
                    <targetPackageRoot>org.sharextras.components.wiki</targetPackageRoot>
                    <sourcePackageRoot>org.sharextras.customization.wiki-video-parser</sourcePackageRoot>
                </customization>
            </customizations>
            <auto-deploy>true</auto-deploy>
        </module>
        
        <!-- Document embeds -->
        <module>
            <id>Wiki Rich Content Document Embeds</id>
            <customizations>
                <customization>
                    <targetPackageRoot>org.sharextras.components.wiki</targetPackageRoot>
                    <sourcePackageRoot>org.sharextras.customization.wiki-document-parser</sourcePackageRoot>
                </customization>
            </customizations>
            <auto-deploy>true</auto-deploy>
        </module>
        
    </modules>
</extension>