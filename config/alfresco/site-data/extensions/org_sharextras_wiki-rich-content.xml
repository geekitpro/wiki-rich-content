                        <js>/res/extras/components/wiki/document-parser.js</js>
                        <js>/res/components/preview/web-preview.js</js>
                        <css>/res/components/preview/web-preview.css</css>
                        <js>/res/js/flash/extMouseWheel.js</js>
                    </dependencies>
                </customization>
            </customizations>
            <auto-deploy>true</auto-deploy>
        </module>
        -->
        
    </modules>
</extension>